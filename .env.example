# CompliancePro360 - SaaS Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=production
APP_NAME=CompliancePro360
APP_VERSION=2.0.0
SECRET_KEY=your-super-secret-key-change-this-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=compliancepro360
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@postgres:5432/compliancepro360

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379
REDIS_URL=redis://:your-secure-redis-password@redis:6379/0

# ============================================================================
# API SETTINGS
# ============================================================================
API_PORT=8000
API_URL=http://api:8000/api/v1
API_WORKERS=4

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================
FRONTEND_PORT=5000

# ============================================================================
# NGINX/PROXY SETTINGS
# ============================================================================
HTTP_PORT=80
HTTPS_PORT=443
DOMAIN_NAME=your-domain.com

# ============================================================================
# CELERY SETTINGS
# ============================================================================
CELERY_BROKER_URL=redis://:your-secure-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-secure-redis-password@redis:6379/0
CELERY_WORKER_CONCURRENCY=4

# ============================================================================
# FLOWER MONITORING
# ============================================================================
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=change-this-flower-password

# ============================================================================
# JWT & AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=CompliancePro360

# ============================================================================
# SMS CONFIGURATION (Twilio)
# ============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# AI/LLM CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# SAAS LICENSING
# ============================================================================
LICENSE_ENCRYPTION_KEY=your-license-encryption-key
PAYMENT_GATEWAY=razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BUCKET_NAME=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1

# ============================================================================
# SECURITY
# ============================================================================
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
RATE_LIMIT_ENABLED=true

# ============================================================================
# PERFORMANCE
# ============================================================================
CACHE_TTL=3600
MAX_UPLOAD_SIZE=100M

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_AI_PREDICTIONS=true
ENABLE_WEB_SCRAPING=true
ENABLE_CLIENT_PORTAL=true
